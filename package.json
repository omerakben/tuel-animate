{
  "name": "@tuel/animate-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm build:deps && turbo run dev --filter='@tuel/components' --filter='@tuel/docs' --filter='@tuel/tailwind-preset' --parallel",
    "dev:simple": "pnpm build:deps && pnpm --filter '@tuel/components' dev & pnpm --filter '@tuel/docs' dev",
    "build": "turbo run build",
    "build:deps": "turbo run build --filter='@tuel/tokens' --filter='@tuel/utils' --filter='@tuel/gsap' --filter='@tuel/motion' --filter='@tuel/three'",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build --filter=@tuel/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "source-map": "0.7.6",
      "@testing-library/react": "*",
      "@testing-library/dom": "*"
    }
  },
  "dependencies": {
    "next": "^15.4.6",
    "react": "19.0.0-rc.1",
    "react-dom": "19.0.0-rc.1"
  }
}
